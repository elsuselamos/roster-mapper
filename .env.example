# ===========================================
# Roster Mapper - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Application
APP_NAME=roster-mapper
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/roster_mapper
DB_ECHO=false

# Storage
MAPPING_DIR=./mappings
STORAGE_DIR=./uploads
TEMP_DIR=./temp

# Features
AUTO_DETECT_STATION=true

# Security
SECRET_KEY=change-me-in-production
API_KEY=your-api-key-here

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
